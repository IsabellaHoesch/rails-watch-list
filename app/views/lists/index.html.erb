<div class="index-page">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url(<%= cl_image_path("photo-1478720568477-152d9b164e26_vl8e5a",
        width: 400, height: 300, crop: :fill) %>);">  
    <div class="container">
      <h1>Movie collector</h1>
      <p>
        <span id="banner-typed-text"></span>
      </p>
    </div>
  </div>

  <div class="container mb-5 mt-5 p-5">
    <div class="lists-card-grid">
      <% @lists.each do |list| %>
        <div class="card-category" style="width: 18rem; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), 
          url(<%= cl_image_path list.photo.key, height: 500, crop: :fill %>)">
          <h5><%= link_to list.name, list_path(list) %></h5>
        </div>
        <% end %>
      </div>
      <%= link_to 'Create movie list', new_list_path, class: "btn btn-outline-secondary" %>
  </div>
</div>
